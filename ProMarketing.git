    <script>
        // Simple modal toggle functionality
        document.addEventListener('DOMContentLoaded', function() {
            const modal = document.getElementById('paymentModal');
            const closeModal = document.getElementById('closeModal');
            const payButtons = document.querySelectorAll('.pay-now-trigger');
            
            // Open modal when any "Pay Now" button is clicked
            payButtons.forEach(button => {
                button.addEventListener('click', function() {
                    modal.classList.remove('hidden');
                });
            });
            
            // Close modal when X is clicked
            closeModal.addEventListener('click', function() {
                modal.classList.add('hidden');
            });
            
            // Close modal when clicking outside
            modal.addEventListener('click', function(e) {
                if (e.target === modal) {
                    modal.classList.add('hidden');
                }
            });
            
            // Currency selector functionality
            const currencySelectors = document.querySelectorAll('.currency-selector');
            currencySelectors.forEach(selector => {
                selector.addEventListener('change', function() {
                    const currency = this.value;
                    const flag = this.parentElement.querySelector('.currency-flag');
                    
                    // In a real app, you would update prices based on currency
                    console.log('Currency changed to:', currency);
                    
                    // Update flag icon (simplified example)
                    if (currency === 'EUR') {
                        flag.src = 'https://flagcdn.com/w20/eu.png';
                    } else if (currency === 'GBP') {
                        flag.src = 'https://flagcdn.com/w20/gb.png';
                    } else if (currency === 'JPY') {
                        flag.src = 'https://flagcdn.com/w20/jp.png';
                    } else if (currency === 'CNY') {
                        flag.src = 'https://flagcdn.com/w20/cn.png';
                    } else {
                        flag.src = 'https://flagcdn.com/w20/us.png';
                    }
                });
            });
            
            // Simulate payment processing
            const paymentForms = document.querySelectorAll('.payment-form');
            paymentForms.forEach(form => {
                form.addEventListener('submit', function(e) {
                    e.preventDefault();
                    const submitButton = this.querySelector('button[type="submit"]');
                    const originalText = submitButton.innerHTML;
                    
                    // Show processing state
                    submitButton.disabled = true;
                    submitButton.innerHTML = '<i class="fas fa-spinner fa-spin mr-2"></i> Processing...';
                    
                    // Simulate API call
                    setTimeout(() => {
                        // Show success message
                        submitButton.innerHTML = '<i class="fas fa-check-circle mr-2"></i> Payment Successful';
                        submitButton.classList.remove('bg-indigo-600', 'hover:bg-indigo-700');
                        submitButton.classList.add('bg-green-500', 'hover:bg-green-600');
                        
                        // In a real app, you would redirect to a success page
                        console.log('Payment processed successfully');
                        
                        // Reset after 3 seconds
                        setTimeout(() => {
                            submitButton.disabled = false;
                            submitButton.innerHTML = originalText;
                            submitButton.classList.remove('bg-green-500', 'hover:bg-green-600');
                            submitButton.classList.add('bg-indigo-600', 'hover:bg-indigo-700');
                            modal.classList.add('hidden');
                        }, 3000);
                    }, 2000);
                });
            });
        });
    </script>
